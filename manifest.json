{
  "manifest_version": 3,
  "name": "Snowflake",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://mail.google.com/*", "http://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png",
  }
}
