{
  "manifest_version": 3,
  "name": "Snowflake",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://mail.google.com/*", "http://127.0.0.1:8000/*"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "css": ["content.css"],
      "js": ["contentScript.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module" 
  },
  "action": {},
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}